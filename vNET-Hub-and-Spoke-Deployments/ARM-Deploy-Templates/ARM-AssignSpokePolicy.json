{
    "$schema": "http://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vnetName": {
            "type": "string"
        },
        "resourceGroupName": {
            "type": "string"
        },
        "vnetAddressSpace": {
            "type": "string"
        },
        "dnsServers": {
            "type": "string"
        },
        "subnets": {
            "type": "array"
        },
        "hubVnetId": {
            "type": "string"
        },
        "location": {
            "type": "string"
        },
        "policyId": {
            "type": "string"
        },
        "assignmentName": {
            "type": "string"
        },
        "subscriptionPolicyRoleAssignment": {
            "type": "string",
            "defaultValue": "[newGuid()]"
        }
    },
    "resources": [
        {
            "name": "[parameters('assignmentName')]",
            "type": "Microsoft.Authorization/policyAssignments",
            "apiVersion": "2019-01-01",
            "properties": {
                "displayName": "[parameters('assignmentName')]",
                "policyDefinitionId": "[parameters('policyId')]",
                "scope": "[subscription().id]",
                "parameters": {
                    "vnetName": {
                        "value": "[parameters('vnetName')]"
                    },
                    "resourceGroupName": {
                        "value": "[parameters('resourceGroupName')]"
                    },
                    "vnetAddressSpace": {
                        "value": "[parameters('vnetAddressSpace')]"
                    },
                    "dnsServers": {
                        "value": "[split(parameters('dnsServers'),',')]"
                    },
                    "subnets": {
                        "value": "[parameters('subnets')]"
                    },
                    "hubVnetId": {
                        "value": "[parameters('hubVnetId')]"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    }
                },
                "description": "Deploy-Spoke-VNET",
                "metadata": {}
            },
            "location": "[parameters('location')]",
            "identity": {
                "type": "SystemAssigned"
            }
        },
        {
            "name": "[parameters('subscriptionPolicyRoleAssignment')]",
            "type": "Microsoft.Authorization/roleAssignments",
            "dependsOn": [
                "[parameters('assignmentName')]"
            ],
            "apiVersion": "2020-04-01-preview",
            "properties": {
                "roleDefinitionId": "4d97b98b-1d4f-4787-a291-c67834d212e7",
                "principalId": "[reference(parameters('assignmentName'), '2019-01-01', 'FULL').identity.principalId]",
                "scope": "[subscription().id]"
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "linkedTemplate",
            "dependsOn": [
                "[parameters('assignmentName')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/lukearp/Enterprise-Landing-Zone-Policies/master/vNET-Hub-and-Spoke-Deployments/ARM-Deploy-Templates/ARM-AssignRoleHubVnet.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "assignmentName": {
                        "value": "[reference(parameters('assignmentName'), '2019-01-01', 'FULL').identity.principalId]"
                    },
                    "hubVnetId": {
                        "value": "[parameters('hubVnetId')]"
                    }
                }
            }
        }
    ],
    "outputs": {
        "assignmentIdentity": {
            "type": "string",
            "value": "[reference(parameters('assignmentName'), '2019-01-01', 'FULL').identity.principalId]"
        },
        "vnetHub": {
            "type": "string",
            "value": "[parameters('hubVnetId')]"
        }
    }
}